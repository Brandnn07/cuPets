{{#if loggedIn}}
{{#each profiles as |profile| }}
<div class="card">
  <div class="card-content">
    <div class="picture">
      <img class="image" src=".{{profile.pet_url}}" alt="{{profile.pet_name}}">
    </div>
    <p class="title">
      {{profile.name}}
    </p>
    <p class="subtitle">
      @{{profile.user_name}}
    </p>
    <p class="subtitle">
      Description: {{profile.description}}
    </p>
    <p class="subtitle">
      Their pet {{profile.pet_type}}
    </p>
    <p class="subtitle">
      Their pet name: {{profile.pet_name}}
    </p>
  </div>
  <footer class="card-footer">
    <p class="card-footer-item">
      <span>
        <a class="is-warning" href=""> I'll pass..</a>
      </span>
    </p>
    <p class="card-footer-item">
      <span>
        <a href="message/{{profile.user_name}}"> Message them!</a>
      </span>
    </p>
  </footer>
</div>
{{/each}}
{{/if}}